<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Botlist</title>
    <link rel="stylesheet" href="/style.css" />
    <script src="/library/index.js"></script>
    <script src="/fontawesome.min.js"></script>
  </head>
  <body>
      <%- include('header.ejs') %>
      <div class="content">
        <h1 class="searchTitle"><%= user.name %></h1>
        <hr>
        <h3>Descriptions:</h3>
        <% user.descs.forEach(el => {%>
            <p><%= el.toString() %></p>
            <hr>
        <%}); %>
        <textarea cols="30" rows="10" class="review"></textarea>
        <a href="javascript:review('<%= user.id %>')" class="primary">Send Review</a>
      </div>
      <%- include('footer.ejs') %>
  </body>
</html>
